---
import { Image } from "astro:assets";
import pfp from "@/images/henrik-circlehat.png";
import { cn } from "@/lib/utils";

type Props = {
  class?: string;
  dimension?: number;
  src?: string;
};

const { class: classes, dimension = 96, src } = Astro.props;
---

{
  src ? (
    <img
      src={src}
      class={cn("rounded-full", classes)}
      alt="picture of henrik"
      width={dimension}
      height={dimension}
    />
  ) : (
    <Image
      src={pfp}
      class={cn("rounded-full", classes)}
      alt="picture of henrik"
      width={dimension}
      height={dimension}
    />
  )
}
