  <main class="flex flex-col mt-20 px-6 font-serif gap-y-4">
    <div class="grid grid-rows-2 grid-cols-2 gap-y-4">
      <div class="">
        <h1
          class="text-4xl font-semibold basis-1/2 col-start-1 col-span-1 row-start-1 row-span-1 cool-text-gradient"
        >
          hi, i'm henrik
        </h1>
      </div>
      <SocialButtons />
      <div class="col-start-2 col-span-1 row-start-1 row-span-2 grid place-content-center">
        <!-- <LanyardCard /> -->
