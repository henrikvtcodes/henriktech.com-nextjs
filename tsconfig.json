{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "allowJs": true
  },
  "include": ["src/**/*", "./astro.config.ts", "./tailwind.config.ts"],
  "exclude": ["node_modules", "astro.config.mjs"]
}
